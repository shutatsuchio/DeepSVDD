using UnityEngine;

public class AppManager : MonoBehaviour
{
    void Update()
    {
        // PCのEscapeキーは、Androidデバイス（Questなど）では「戻る」ボタンに対応します。
        if (Input.GetKeyDown(KeyCode.Escape))
        {
            // アプリケーションを終了します。
            QuitApplication();
        }
    }

    private void QuitApplication()
    {
#if UNITY_EDITOR
        // Unityエディタで実行している場合は、再生を停止します。
        UnityEditor.EditorApplication.isPlaying = false;
#else
        // ビルドされたアプリケーションの場合は、アプリを終了します。
        Application.Quit();
#endif
    }
}
